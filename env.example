# Application
NODE_ENV=development
APP_NAME=AI SEO Keyword Research Tool
APP_VERSION=0.1.0

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Gateway
GATEWAY_PORT=3001
GATEWAY_HOST=0.0.0.0
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_seo_tool
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_seo_tool
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# OpenSearch
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# ClickHouse
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=ai_seo_tool

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# NATS
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=ai-seo-cluster

# Object Storage (MinIO/S3)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=ai-seo-exports
S3_REGION=us-east-1

# SERP API Providers
SERP_API_KEY=your-serp-api-key
SERP_PROVIDER=serpapi  # or brightdata, ahrefs, etc.

# External APIs
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Workers
WORKERS_PORT=8001
WORKERS_HOST=0.0.0.0

# Development
DEBUG=true
LOG_LEVEL=debug
